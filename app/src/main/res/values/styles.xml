<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkGrey</item>
        <item name="colorPrimaryDark">@color/bordo</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Button  connexion-->
    <style name="ButtonCnx">
        <item name="android:background">@color/bordo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:width">250dp</item>
        <item name="android:height">50dp</item>
    </style>

    <!-- Button  under Tabs -->
    <style name="Button">
        <item name="android:colorButtonNormal">@color/bordo</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:elevation">8dp</item>
        <item name="android:width">150dp</item>
        <item name="android:height">50dp</item>
    </style>


    <style name="ButtonFocus">
        <item name="android:colorButtonNormal">@color/darkGrey</item>
        <item name="android:textColor">@color/bordo</item>
        <item name="android:elevation">8dp</item>
        <item name="android:width">150dp</item>
        <item name="android:height">50dp</item>
    </style>


    <!-- Button Details -->
    <style name="ButtonDetails">
        <item name="android:colorButtonNormal">@color/bordo</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">5dp</item>
        <item name="android:width">70dp</item>
        <item name="android:height">30dp</item>
    </style>

    <!-- Button  under Fun Tabs -->
    <style name="ButtonFun">
        <item name="android:colorButtonNormal">@color/bordo</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">8dp</item>
        <item name="android:width">80dp</item>
        <item name="android:height">50dp</item>
    </style>

    <!-- Button Rate -->
    <style name="ButtonRate">
        <item name="android:colorButtonNormal">@color/bordo</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:elevation">8dp</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="android:textSize">4pt</item>
    </style>


    <!-- Card handling the information  -->
    <style name="card">
        <item name="android:colorBackground">@color/lightGrey</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>

    <!-- Detail card  -->
    <style name="details">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">6pt</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>


    <!--   -->
    <style name="director">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">6pt</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>

    </style>

    <style name="directorName">
        <item name="android:textColor">#B3ffffff</item>
        <item name="android:textSize">6pt</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">16dp</item>

    </style>

    <style name="grade">
        <item name="android:textColor">#B3ffffff</item>
        <item name="android:textSize">6pt</item>

    </style>


    <style name="actorName">
        <item name="android:textColor">#B3ffffff</item>
        <item name="android:textSize">6pt</item>
        <item name="android:paddingTop">8dp</item>

    </style>

    <style name="Widget.MaterialRatingBar.RatingBar" parent="android:Widget.RatingBar">
        <!--
        Disabled for correct behavior on Android 4.x, see
        https://github.com/android/platform_frameworks_base/commit/911743652b597057a1bd7ef8a921e9ff8dce0f4a#diff-149f45c5ff2d3185bb79688ba17bc432L536
        <item name="android:progressDrawable">@null</item>
        -->
        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:maxHeight">36dp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Small">
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Indicator">
        <item name="android:isIndicator">true</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Indicator.Small">
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>


</resources>
